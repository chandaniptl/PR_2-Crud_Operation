<%- include("partials/header") %>


  <div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 550px; border-radius: 1rem; background: #ffffff;">
      <div class="text-center mb-4">
        <h3 class="fw-semibold text-black">Assign Task</h3>
        <p class="text-muted small">Task for: <strong>
            <%= employee.name %>
          </strong></p>
      </div>

     <form action="/task" method="POST"> 
        <input type="hidden" name="name" value="<%= employee.name %>">

        <div class="form-group mb-3">
          <label for="priority" class="form-label fw-semibold">Priority</label>
          <select name="priority" id="priority" required class="form-select rounded-pill">
            <option disabled selected>Choose Priority</option>
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
          </select>
        </div>

        <div class="form-group mb-3">
          <label for="description" class="form-label fw-semibold">Task Description</label>
          <textarea name="description" id="description" rows="3" placeholder="Enter task details..."
            class="form-control rounded-4" required></textarea>
        </div>

        <div class="form-group mb-4">
          <label for="deadline" class="form-label fw-semibold">Deadline</label>
          <input type="date" name="deadline" id="deadline" required class="form-control rounded-pill">
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-dark rounded-pill fw-bold">Assign Task</button>
        </div>
      </form>
    </div>
  </div>